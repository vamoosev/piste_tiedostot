---
import '../styles/global.css'

import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Gloock&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center justify-center min-h-screen scroll-smooth dark:bg-slate-900 dark:text-white">
		<Header />
		<div class="flex flex-col justify-center max-w-lg mt-6 dark:bg-slate-800 bg-slate-200 rounded">
			<slot />
		</div>
		<Footer />
	</body>
</html>
